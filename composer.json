{
	"name": "rkr/countries",
	"license": "MIT",
	"description": "A library to help translating country-names into various standards and to text",
	"type": "library",
	"require": {
		"php": ">= 7.0"
	},
	"require-dev": {
		"phpunit/phpunit": ">= 3.7@stable",
		"phpstan/phpstan": ">= 0.1"
	},
	"autoload": {
		"psr-4": {
			"Kir\\CountryCodes\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Kir\\CountryCodes\\": ["src/", "tests/"]
		}
	},
	"scripts": {
		"phpstan": "phpstan analyze -l max src"
	}
}
